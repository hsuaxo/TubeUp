<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@drawable/row_pressed"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/image_view_thumbnail"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_photo_black_24dp" />

    <ImageView
        android:id="@+id/image_view_type"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/image_view_thumbnail"
        android:layout_alignEnd="@+id/image_view_thumbnail"
        android:layout_marginEnd="2dp"
        android:src="@drawable/playlist_play"
        android:tint="@color/colorWhite"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_view_thumbnail"
        android:layout_toStartOf="@+id/image_view_more"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/youtube"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_view_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name"
        android:layout_toEndOf="@+id/image_view_thumbnail"
        android:layout_toStartOf="@+id/image_view_more"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/youtube"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/image_view_more"
        style="?android:attr/actionOverflowButtonStyle"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/dots_vertical" />

</RelativeLayout>